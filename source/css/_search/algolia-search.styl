.search-dialog 
	position fixed
	top 5rem
	left 50%
	z-index 1001
	display none
	margin-left -15rem
	padding 1rem
	width 30rem
	box-shadow var(--sco-shadow-lightblack)
	background var(--sco-card-bg)
	border var(--style-border)
	transition 0.3s
	border-radius 12px

	+maxWidth768()
		top 0px
		left 0px
		margin 0px
		width 100%
		height 100%

	.search-close-button
		&:hover
			color rgb(48, 122, 246)

	.search-box
		padding-top 8px
		max-width 100%
        
		input
			height 100%
			width 100%
			padding 0.25rem 0.7rem
			outline 0px
			border var(--style-border)
			border-radius 8px
			background var(--sco-secondbg)
			color var(--sco-fontcolor)
			&:focus
				border var(--style-border-hover)

	.search-close-button
		color rgb(133, 133, 133)
		font-size 1.2em
		line-height 1
		cursor pointer
		transition color 0.2s ease-in-out 0s

#search-mask 
	position fixed
	inset 0px
	z-index 1000
	display none
	background rgba(0, 0, 0, 0.6)
	backdrop-filter blur(12px)
	-webkit-backdrop-filter blur(12px)
	transform translateZ(0)
	background var(--sco-maskbgdeep)

.search-nav 
	display flex
	align-items center
	justify-content space-between
	padding 0 0.2rem 0.7rem 0.2rem

.search-dialog-title 
	font-weight bold
	color var(--sco-main)
	font-size 1.4em
	line-height 1

.search-box 
	input 
		&::placeholder 
			color var(--sco-gray)
			
#algolia-search 
	#search-results 
		padding 8px
		max-height calc(80vh - 130px)
		overflow-y auto

		+maxWidth768()
			max-height 80vh !important
            
	.ais-Hits-list 
		padding 0

	.ais-Hits-item 
		margin 10px 0

	.algolia-hit-item-content 
		margin 0
		padding-left 10px
		font-size 14px
		color var(--sco-gray)

	.algolia-hit-item-link 
		width auto
		max-width 100%
		white-space nowrap
		text-overflow ellipsis
		overflow hidden
		font-weight bold

	mark 
		color var(--sco-theme)
		font-style normal
		background var(--sco-card-bg)

	.ais-Hits--empty 
		text-align center
		font-weight 600

	.algolia-stats 
		color var(--sco-gray)
		font-size .8rem
		font-weight bold
