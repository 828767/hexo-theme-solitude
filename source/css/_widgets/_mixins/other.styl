span.tags-punctuation
  margin-right 2px
  font-size .7rem
  font-weight 700
  transition .3s
  display flex
  align-items center

  &:hover
    color var(--sco-main)

.bber-reply
  cursor pointer
  margin 0 4px

  &:hover
    color var(--sco-main)

.post-tips
  color var(--sco-gray)
  font-size 14px;
  position absolute
  bottom 2rem
  left 2rem

  +maxWidth768()
    left 1rem

  a
    color var(--sco-gray)
    border none

    &:hover
      color var(--sco-main)