.author-content
  display flex
  flex-wrap wrap
  justify-content space-between
  width 100%
  margin-top 1rem

  +maxWidth768()
    margin-top 0

  .author-content-item
    +maxWidth1300()
      animation slide-in .6s 0s backwards
    +maxWidth768()
      width 100% !important
      margin-top 1rem
      padding 1rem

.author-content.author-content-item.sharePage
  height 19rem
  background-size cover
  color var(--sco-white)
  overflow hidden
  margin-top 0

.author-content-item
  width 49%
  border-radius 12px
  background var(--sco-card-bg)
  border var(--style-border-always)
  box-shadow var(--sco-shadow-border)
  position relative
  overflow hidden
  padding 1rem 2rem

  +maxWidth768()
    width 100%
    margin-top 1rem
    padding 1rem

  &.single
    width 100%

  .author-content-item-title
    font-size 36px
    font-weight 700
    line-height 1

  .author-content-item-tips
    opacity .8
    font-size .6rem
    margin-bottom .5rem

  .content-bottom
    margin-top auto
    display flex
    align-items center
    justify-content space-between

    .icon-group
      display flex

      i
        display inline-block
        width 22px
        height 18px
        margin-right .5rem

  .card-content
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    display flex
    flex-direction column
    padding 1rem 2rem

    +maxWidth768()
      padding 1rem

    .author-content-item-title
      margin-bottom .5rem

    .banner-button-group
      position absolute
      bottom 1.5rem
      right 2rem

      .banner-button
        height 40px
        width 118px
        border-radius 20px
        justify-content center
        background var(--sco-black-op)
        color var(--sco-white)
        display flex
        align-items center
        z-index 1
        transition .3s
        cursor pointer
        backdrop-filter saturate(180%) blur(20px)
        -webkit-backdrop-filter blur(20px)
        transform translateZ(0)

        &:hover
          background var(--sco-main)
          color var(--sco-white)

        i
          margin-right 8px
          font-size 22px

+maxWidth900()
  .author-content-item
    .card-content
      .banner-button-group
        right 1rem
        bottom 1rem

      .banner-button-group
        .banner-button
          background 0 0
          color var(--sco-white)
          padding 0
          width 30px
          height 30px

          i
            margin-right 0
            font-size 1.5rem

      .banner-button-text
        display none

#page
  p
    a
      &:not(.headerlink)
        text-decoration none
        border-bottom 2px dotted var(--sco-lighttext)
        color var(--sco-fontcolor)
        font-weight 700
        padding 0 4px
        border-radius 4px 4px 0 0

      &:hover
        color var(--sco-white)
        border-radius 4px
        background var(--sco-main)