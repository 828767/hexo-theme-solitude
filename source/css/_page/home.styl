// 即刻、categoriesBar 样式
#bbTimeList,
#category-bar
  padding .4rem 1rem .4rem .7rem
  background var(--sco-card-bg)
  border-radius 12px
  display flex
  white-space nowrap
  overflow hidden
  margin-bottom 1rem
  border var(--style-border)
  transition .3s
  height 50px
  width 100%
  justify-content space-between
  -webkit-user-select none
  align-items center

  +maxWidth1300()
    margin-bottom 1rem
    animation slide-in .6s 0s backwards

  +minWidth1300()
    &:hover
      border var(--style-border-hover)
      box-shadow var(--sco-shadow-main)

  +maxWidth768()
    margin-bottom 0
    margin-top 0
    border-radius 0
    background var(--sco-background)
    padding 0.5rem 0
    border none

