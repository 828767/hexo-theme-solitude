    animation slide-in .6s .3s backwards

    .category-in-bar-tips
      margin-bottom .25rem

.page-title
  display none

#page h1.page-title
  display inline
  margin .4rem 0 1rem

#page
  background 0 0
  border none
  padding 0
  box-shadow none
