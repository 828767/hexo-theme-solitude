// 首页顶部一坨 and 友链banner
div#banners
  display none
  +minWidth1200()
    display flex
    width 100%
    height 76%
    background var(--sco-card-bg)
    margin-bottom .5rem
    border var(--style-border)
    border-radius 12px
    overflow hidden
    position relative
    box-shadow var(--sco-shadow-border)
    flex-direction column
    transition .3s
    will-change transform
    animation slide-in .6s .1s backwards

    &:hover
      box-shadow var(--sco-shadow-main)

    .banner-button-group
      position absolute
      right 2rem
      top 2rem
      display flex

    .banner-button
      padding 8px 12px
      background var(--sco-fontcolor)
      border-radius 12px
      color var(--sco-card-bg)
      display flex
      align-items center
      z-index 1
      transition .3s
      cursor pointer
      box-shadow var(--sco-shadow-black)

      &.secondary
        background var(--sco-secondbg)
        border var(--style-border-always)
        color var(--sco-lighttext)
        margin-right 1rem
        box-shadow var(--sco-shadow-border)

      &:hover
        background var(--sco-theme)
        color var(--sco-white)

      i
        margin-right 8px
        font-size 1rem

    .banners-title
      top 2rem
      left 1.5rem
      position absolute
      display flex
      flex-direction column

      &-big
        font-size 36px
        line-height 1
        font-weight 700
        margin-bottom 8px

      &-small
        font-size 12px
        line-height 1
        color var(--sco-secondtext)
        margin-top 8px
        margin-bottom .5rem

    #banner-hover
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      background var(--sco-theme)
      color var(--sco-white)
      padding-left .5rem
      display flex
      flex-direction column
      justify-content center
      opacity 0
      transition cubic-bezier(.71, .15, .16, 1.15) .6s

      i
        font-size 80px
        opacity .4

    &:hover
      #banner-hover
        opacity 1
        padding-left 2rem
        background var(--sco-theme-op-deep)
        backdrop-filter blur(15px)
        transform translateZ(0)
        transition .3s
        background-size 200%
        cursor pointer

    .flink
      .banners-title
        top 1.5rem

    .bannerText
      font-size 4rem
      line-height 4rem
      font-weight 700

    .banner-righticon
      font-size 4rem
      opacity .6

#home_top
  max-width 1400px
  margin .5rem auto auto
  padding 0 1.5rem

  +maxWidth768()
    padding 0
    margin-top 0

  // banner
  if hexo-config('hometop.banner.enable')
    .recent-top-post-group
      border-radius 12px
      overflow hidden
      overflow-x auto
      width 100%
      margin-bottom 0
      -webkit-user-select none

      .recent-post-top
        display flex
        flex-direction row
        flex-wrap nowrap
        width 100%
        overflow-x scroll

        &::-webkit-scrollbar
          display none

        / #bannerGroup
          display flex

          .categoryGroup
            display flex
            flex-direction column
            justify-content space-between
            min-width 200px
            +maxWidth768()
              min-width 130px
              margin-bottom .5rem
              margin-left 1rem
              max-height 164px
              overflow hidden
              position relative

            .categoryItem
              overflow hidden
              transform scale(1)
              transition all .8s cubic-bezier(.65, .15, .37, 1.19)
              height 48%
              border-radius 12px

              &:nth-child(3)
                display none
              +minWidth1200()
                width calc(100% / 3 - .33rem)
                height 100%
                margin-right .5rem

                &:last-child
                  margin-right 0

                &:hover
                  width 50%

                &:nth-child(3)
                  display flex

              i
                font-size 5rem
                opacity .2
                position absolute
                right 0
                top 20%
                transition .3s
                width 100px
                text-align center
                filter blur(2px)

              &:hover
                i
                  opacity .8
                  transition .8s
                  transition-delay .15s
                  transform scale(1.03) rotate(0)
                  font-size 2.5rem
                  filter blur(0)

                  +minWidth1300()
                    transform scale(1.03) rotate(0)

              a.categoryButton
                .categoryButtonText
                  padding-left 21px

                &.bikan
                  background linear-gradient(to right, #358bff, #15c6ff)
                  background-size 200%

                  [data-theme=dark] &
                    background linear-gradient(to right, #0653b8, #2fcbff)
                    background-size 200%

                &.remen
                  background linear-gradient(to right, #f65, #ffbf37)
                  background-size 200%

                  [data-theme=dark] &
                    background linear-gradient(to right, #e22a16, #da980c)
                    background-size 200%

                &.shiyong
                  background linear-gradient(to right, #18e7ae, #1eebeb)
                  background-size 200%

                  [data-theme=dark] &
                    background linear-gradient(to right, #099e74, #0ea4a4)
                    background-size 200%


  +minWidth1200()
    overflow-x visible

    / #bannerGroup
      width calc(50% - .25rem)
      margin-right .5rem
      height calc(328px + .5rem)
      display flex
      flex-direction column
      justify-content space-between

      .categoryGroup
        flex-direction row
        height 24%
        animation slide-in .6s .2s backwards

  .recent-post-item
    display flex
    width 200px
    flex-direction column
    align-items flex-start
    margin-left .5rem
    background var(--sco-card-bg)
    border-radius 12px
    overflow hidden
    min-width 200px
    height 164px
    max-height 164px
    border var(--style-border-always)
    transition .3s
    position relative
    box-shadow var(--sco-shadow-border)

    +minWidth1300()
      width calc(100% / 3 - 0.25rem)
      margin-left 0

    +maxWidth768()
      border-radius 8px
      box-shadow none
      clip-path inset(0 0 0 0 round 8px)

      &last-child
        margin-right 1rem

  span.recent-post-top-text
    position absolute
    top 0
    left -40px
    display flex
    z-index 1
    background var(--sco-theme)
    color var(--sco-white)
    padding 2px 8px
    font-size .6rem
    border-radius 12px 0 12px 0
    transition .3s
    cursor pointer

  .recent-post-itemhover .recent-post-top-text
    left 0

  .recent-post-item .post_cover a
    height 100px
    overflow hidden
    display flex

  .recent-post-item .post_cover img
    object-fit cover
    width 100%
    background var(--sco-secondbg)
    border-radius 12px 12px 0 0

  .recent-post-itemhover .post_cover img
    transform scale(1)

  .recent-post-item .post_cover
    -webkit-mask-image -webkit-radial-gradient(center, #fff, #000)

  .recent-post-item .recent-post-info
    padding .3rem .5rem .3rem .5rem !important
    transition .3s

  .recent-post-itemhover .recent-post-info a
    color var(--sco-fontcolor)

    +maxWidth1300()
      .recent-post-itemhover .recent-post-info a
        color var(--sco-theme)
        transition .3s

  .recent-post-item .recent-post-info .article-title
    -webkit-line-clamp 2
    overflow hidden
    display -webkit-box
    -webkit-box-orient vertical
    line-height 1.5
    justify-content center
    align-items flex-end
    align-content center
    font-weight 700
    font-size .8rem !important
    padding 0 !important