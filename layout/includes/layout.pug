- page.type = is_home() ? 'solitude' : page.type

doctype html
html(lang=config.language, data-theme="light")
    head
        include ./head.pug
    body#body(data-type=page.type)
        // loading
        if theme.loading.fullpage
            include ./loading.pug

        // console
        include ./console.pug

        // sidebar
        include ./sidebar.pug

        div#body-wrap(class = is_post() ? 'post' : 'page')
            include ./header.pug

            if(page.type !== '404')
                block content

                footer#footer
                    include ./footer.pug
            else
                div.error#body-wrap
                    block content

        // inject body
        include ./inject/body.pug

        // search
        include ./widgets/third-party/search/index.pug

        // music
        include ./widgets/third-party/music.pug