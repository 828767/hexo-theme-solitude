<h1 class="page-title" style="display: inline"><%= __('page.category') %></h1>
<div class="category-lists">
    <div class="tag-cloud-list is-center">
        <% site.categories.each(function (item) { %>
            <a href="<%= url_for(item.path) %>">
                <span class="tags-punctuation"></span>
                <%= item.name %>
                <span class="tagsPageCount"><%= item.length %></span>
            </a>
        <% }) %>
    </div>
</div>