<div class="meta">
    <img class="no-lightbox no-lazyload avatar" src="<%= theme.aside.card.author.img %>">
    <div class="info">
        <span class="bber_nick"><%= config.author %></span>
        <time class="datetime bber_date" datetime="<%= moment(item.date).format() %>"></time>
    </div>
    <a class="bber-reply goComment" onclick="sco.toTalk('<%- item.content %>')" >
        <i class="scoicon sco-chat-fill" style="font-size: 1rem;"></i>
    </a>
</div>